<%= form_with(model: @lease, local: true) do |f| %>
  <% if @lease.errors.any? %>
    <div id="error_explanation">
      <h2><%= @lease.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @lease.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :lease_name %><br>
  <%= f.text_field :lease_name %><br>
  <%= f.label :rent %><br>
  <%= f.text_field :rent %>円<br>
  <%= f.label :address %><br>
  <%= f.text_field :address %><br>
  <%= f.label :age %><br>
  <%= f.text_field :age %>年<br>
  <%= f.label :note %><br>
  <%= f.text_area :note %><br>

  <hr>

  <%= f.fields_for :closest_stations do |cs| %>
    <h4>最寄り駅 <%= cs.index + 1 %></h4>
    <%= cs.label :route_name %><br>
    <%= cs.text_field :route_name %><br>
    <%= cs.label :station_name %><br>
    <%= cs.text_field :station_name %><br>
    <%= cs.label :minute_walk %><br>
    <%= cs.text_field :minute_walk %>分<br>
  <% end %>

  <%= f.submit %>
<% end %>

<div class="wrapper">
  <p><span class="bold">物件名:</span> <%= @lease.lease_name %></p>
  <p><span class="bold">賃料:</span> <%= @lease.rent.to_s(:delimited) %>円</p>
  <p><span class="bold">住所:</span> <%= @lease.address %></p>
  <p><span class="bold">築年数</span> <%= @lease.age %>年</p>
  <p><span class="bold">備考</span> <%= @lease.note %></p>
</div>

<% if @closest_stations.present? %>
  <hr>

  <% @closest_stations.each_with_index do |closest_station, i| %>
    <h3>最寄り駅 <%= i+1 %></h3>
    <div class="wrapper">
      <p><span class="bold">路線名</span> <%= closest_station.route_name %>線</p>
      <p><span class="bold">駅名</span> <%= closest_station.station_name %>駅</p>
      <p><span class="bold">徒歩分数</span> <%= closest_station.minute_walk %>分</p>
    </div>
  <% end %>
<% end %>

<%= link_to %q(編集), edit_lease_path %> | <%= link_to %q(戻る), leases_path %>
